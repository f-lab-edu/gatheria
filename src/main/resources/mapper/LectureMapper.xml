<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gatheria.mapper.LectureMapper">

  <resultMap id="LectureResultMap" type="com.gatheria.domain.Lecture">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="code" column="code"/>
    <result property="instructorId" column="instructor_id"/>
    <result property="createdAt" column="created_at"/>
    <result property="updatedAt" column="updated_at"/>
  </resultMap>

  <!-- 수업 등록 -->
  <insert id="insertLecture" parameterType="com.gatheria.domain.Lecture" useGeneratedKeys="true"
    keyProperty="id">
    INSERT INTO lectures (name, code, instructor_id, created_at, updated_at)
    VALUES (#{name}, #{code}, #{instructorId}, NOW(), NOW())
  </insert>

  <!-- ID로 수업 조회 -->
  <select id="findLectureById" parameterType="long" resultMap="LectureResultMap">

    SELECT *
    FROM lectures
    WHERE id = #{lectureId}
  </select>

  <!-- 수업 코드로 조회 -->
  <select id="findLectureByCode" resultMap="LectureResultMap">
    SELECT *
    FROM lectures
    WHERE code = #{code}
  </select>

  <!-- 교수자 ID로 수업 리스트 조회 -->
  <select id="findByInstructorId" resultMap="LectureResultMap">
    SELECT *
    FROM lectures
    WHERE instructor_id = #{instructorId}
  </select>

  <!-- 학생이 수강 중인 강의 ID 목록 -->
  <select id="findLectureIdsByStudentId" resultType="long">
    SELECT lecture_id
    FROM lecture_students
    WHERE student_id = #{studentId}
  </select>

  <!-- 강의 ID 리스트로 강의들 조회 -->
  <select id="findLecturesByIds" resultMap="LectureResultMap">
    SELECT * FROM lectures WHERE id IN
    <foreach collection="lectureIds" item="id" open="(" close=")" separator=",">
      #{id}
    </foreach>
  </select>

  <!-- 수강 여부 확인 -->
  <select id="existEnrollmentByStudentIdAndLectureID" resultType="boolean">
    SELECT EXISTS (SELECT 1
                   FROM lecture_students
                   WHERE student_id = #{studentId}
                     AND lecture_id = #{lectureId})
  </select>

  <!-- 수강 신청 -->
  <insert id="insertLectureStudent">
    INSERT INTO lecture_students (student_id, lecture_id, created_at, updated_at)
    VALUES (#{studentId}, #{lectureId}, NOW(), NOW())
  </insert>

  <!-- 수업에 등록된 학생 ID 조회 -->
  <select id="findStudentIdsByLectureId" resultType="long">
    SELECT student_id
    FROM lecture_students
    WHERE lecture_id = #{lectureId}
  </select>


</mapper>